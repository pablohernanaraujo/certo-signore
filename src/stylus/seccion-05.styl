.contenedor-footer
  display flex
  width 100%
  min-height 100vH
  background-color crimson
  box-sizing border-box

  & .mapa
    background-color coral
    flex 3
    ruta('mapa.jpg')
    background-size cover

  & .contenedor-formulario
    background-color #202020
    flex 2
    display flex
    justify-content center
    align-items center
    
    & .formulario
      width 80%

      & .input
        width 100%
        box-sizing border-box
        border none
        background-color #2b2b2b
        padding 5px
        color #e5c163
        margin-bottom 10px
        border-bottom 3px solid #e5c163
        transition background-color .3s ease

        &::-webkit-input-placeholder
          color #e5c163

        &:focus
          background-color #383838

      & .boton
        width 100%
        background-color #e5c163
        border none
        font-weight 800
        color #2b2b2b
        padding 8px 0 5px
        font-size 18px
        margin-bottom 40px

      & .contacto-email, .contacto-celular, .contenedor-socials
        color #e5c163
        text-align center
        margin-bottom 10px

      & i 
        font-size 22px
        padding 0 6px

textarea:focus, input:focus
  outline none

@media (max-width: 800px)
  .contenedor-footer
    flex-direction column