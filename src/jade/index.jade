	section.seccion#contacto
		div.contenedor-footer
			div.mapa
			div.contenedor-formulario
				div.formulario
					form
						input.input(placeholder="NOMBRE")
						input.input(placeholder="EMAIL")
						input.input(placeholder="CELULAR")
						textarea.input(placeholder="ASUNTO", rows="4")
						button.boton ENVIAR

					div.contacto-email rubengalvan@certosignore.com
					div.contacto-celular 1159481254
					div.contenedor-socials
						i.fa.fa-pinterest-p
						i.fa.fa-facebook
						i.fa.fa-twitter
	

	script(src="./js/jquery.min.js")
	script(src="./js/materialize.min.js")
	script(src="scripts.js")
	script(type="text/javascript").
		$(window).load(function() {
			$(".se-pre-con").fadeOut("slow");
		});
